<?xml version="1.0" encoding="UTF-8"?>
<openerp>
 <data>
 
    <record id="form_users" model="ir.ui.view">
      <field name="name">shop_separation.form_users</field>
      <field name="model">res.users</field>
      <field name="inherit_id" ref="base.view_users_form"/>
      <field name="arch" type="xml">
            <group string="Allowed Companies" position="after">
                <group string="Shops">
                    <field name="shop_id"/>
                    <field name="shop_ids" widget="many2many_tags"/>
                </group>
            </group>
      </field>      
    </record>
    
  </data>
</openerp>
